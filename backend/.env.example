# Sample environment variables for OCR System

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Google Cloud Vision API (required for Google Vision OCR)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your-credentials.json

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ocr_db

# Storage Settings
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# PaddleOCR Settings
PADDLEOCR_USE_ANGLE_CLS=True
PADDLEOCR_LANG=en

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "https://your-production-frontend.com"]
